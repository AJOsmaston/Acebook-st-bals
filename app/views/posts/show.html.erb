<p id="notice"><%= notice %></p>

<p>
  <strong>Message:</strong>
  <%= @post.message %>
</p>

<p>
  <strong>Likes count:</strong>
  <span><%= @post.likes.count %> <%= (@post.likes.count) == 1 ? "Like" : "Likes" %></span>
</p>

<p>
  <strong>Image:</strong>

  <% (0...@post.pictures.count).each do |picture| %>
      <%= image_tag @post.pictures[picture], style: "width: 400px;" %>
  <% end %>
</p>

<p>
  <strong>Comments</strong>

  <% @comments.each do |c| %>
     <h1> <%= c.comment_text %> </h1>
  <% end %>
  
</p>

<%= link_to "Edit", edit_post_path(@post) %> |
<%= link_to "Back", posts_path %> |
<%= link_to "Add Comment", new_comment_path(post_id: @post.id) %>
