 <% @posts.reverse.each do |post| %>

<div class="card mb-3">
  <div class="row g-0">
    <div class="col-md-3 d-flex flex-column text-center align-items-center my-5">  
      <%= image_tag post.user.display_profile_photo, class: "post_avatar" %>
        <div class="mt-2">
          <p style="font-size: 15px;">Posted by <%= post.user.first_name %> <%= post.user.last_name %></p>
          <p style="font-size: 10px;">Posted <%= time_ago_in_words(post.created_at) %> ago.</p>
        </div>
    </div>
    <div class="col-md-9">
      <div class="card-body">
      <h5 class="card-title"><%= post.message %></h5>
        <h5 class="card-title">Card title</h5>
        <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
      </div>
    </div>
  </div>
</div>



 <% end %>
