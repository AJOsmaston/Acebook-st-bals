<div class="border shadow p-3 mb-5 bg-body rounded mt-5"> 
<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-6 text-center m-3">
        <div class="field">
          <%= form.text_field :message, class: "form-control mt-1", placeholder: "What's on your mind?" %>
        </div>
        <br>
        <div class="field">
          <%= form.label :upload_Image, class: "form-label" %>
          <%= form.file_field :pictures, multiple: true, class: "form-control mt-1" %>
        </div>
        <br>

        <div class="field">
          <%= form.label :upload_Video, class: "form-label" %>
          <%= form.text_field :video_url, class: "form-control mt-1", placeholder: "Paste your URL here..." %>
        </div>
       <br>

        <div class="actions">
          <%= form.submit class: "btn btn-primary " %>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>
