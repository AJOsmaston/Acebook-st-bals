<div class="container">
  <div class="row">
    <div class="col text-center m-3">
        <%= link_to "New Post", new_post_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>

<h1>Acebook</h1>

<%= render "form", post: @post %>

<div class="container">
  <div class="row">
    <div class="col">

    <% @posts.reverse.each do |post| %>
        <div class="card">
      <div class="card-body">
        <p>Name: <%= post.user.first_name %> <%= post.user.last_name %> </p>
        <p>User email: <%= post.user.email %> </p>
        <p>Message: <%= post.message %> </p>
        
        <%= post.likes_count %>
        Posted <%= time_ago_in_words(post.created_at) %> ago. 
        <%= link_to "Show", post %></td>
        <% if post.user.id == session[:user_id] %>
          <%= link_to "Edit", edit_post_path(post) %></td>
          <%= link_to "Delete", post, method: :delete, data: { confirm: "Are you sure?" } %></td>
        <% end %>
     </div>
    </div> 
    <% end %>
 
</div>
    </div> 
</div> 
