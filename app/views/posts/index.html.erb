<% if Current.user %>
  <<%= render "form", post: @post %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col">
    </div>
    <div class="col-6">
      <% @posts.reverse.each do |post| %>
        <div class="card text-center mb-5">
          <div class="card-body">
            <% unless post.pictures.empty? %>
              <% (post.pictures).each do |picture| %>
                <%= image_tag picture, style: "width: 400px;", class: "card-img-top" %>
              <% end %>
            <% end %>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= post.message%></h5>
            <p>Posted by <%= post.user.first_name %> <%= post.user.last_name %> </p>
            <%= post.likes_count %>
            Posted <%= time_ago_in_words(post.created_at) %> ago. 
          </div class>
          <div class="card-body">
            <% if post.user.id == session[:user_id] %>
            <%= link_to "Edit", edit_post_path(post), class: "card-link" %>
            <%= link_to "Delete", post, method: :delete, data: { confirm: "Are you sure?" }, class: "card-link" %>
            <% end %>
            <%= link_to "Add Comment", new_comment_path(post_id: post.id),  class: "card-link"  %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col">
    </div>
  </div>
</div>