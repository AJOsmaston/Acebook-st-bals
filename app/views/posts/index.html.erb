<% if Current.user %>
  <%= render "form", post: @post %>
<% end %> 

<% if @posts.empty? && !Current.user %>
  <div class="container">
    <div class="row justify-content-center vh-100 align-content-center">
      <div class="col-12 col-md-6">
        <div class="m-3 text-center">
          <% @user = User.new %>
          <%= render "registrations/signupform", user: @user %>
          <%= button_to("Sign In", sign_in_path, method: "get") %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="container"> 
  <div class="row justify-content-center">
    <div class="col-12 col-md-9 d-flex flex-column justify-content-center">  
      <%= render "card", post: @post %>  
      <div>
        <iframe width="100%" height="auto" src="<%= video_embed(post.video_url) %>" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
      </div>
    </div>
  </div>
</div>
              