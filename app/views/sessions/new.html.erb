<div class="container">
  <div class="row justify-content-center vh-100 align-content-center">
    <div class="col-12 col-md-6">

        <div class="m-3 text-center" >
        <h1>Please Log In</h1>

     
        <%= form_with(local: true, url: sign_in_url) do |form| %>

        <div>
          <%= form.label :email, class: "form-label" %>
          <%= form.text_field :email, id: "email", class: "form-control my-2" %>
        </div>

        <div>
          <%= form.label :password, class: "form-label" %>
          <%= form.password_field :password, id: "password", class: "form-control my-2" %>
        </div>

        <div>
          <%= form.submit "Log In", class: "btn btn-dark m-2" %>
        </div>

        <div>
          <%= link_to "Forgot password?", new_password_reset_path, class: "text-dark" %>
        </div>

        <% end %>
        </div>
    </div>
  </div>
</div>
